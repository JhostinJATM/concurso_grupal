# Configuración de entorno para desarrollo
# Copiar este archivo como .env y ajustar los valores según sea necesario

# Django settings
SECRET_KEY=django-insecure-change-this-in-production
DEBUG=True
DJANGO_ENVIRONMENT=development
ALLOWED_HOSTS=localhost,127.0.0.1

# Database configuration
DB_NAME=smart_drawers_dev
DB_USER=root
DB_PASSWORD=
DB_HOST=localhost
DB_PORT=3306

# Email configuration (opcional para desarrollo)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=Smart Drawers <noreply@smartdrawers.com>

# Redis configuration (para producción)
REDIS_URL=redis://127.0.0.1:6379/1

# Security (para producción)
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# === CONFIGURACIÓN OPENAI (RECOMENDACIONES IA) ===
# API Key de OpenAI (requerida para recomendaciones con IA)
# Obtén tu clave en: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Modelo de OpenAI a utilizar (opcional)
OPENAI_MODEL=gpt-3.5-turbo

# Máximo de tokens por respuesta (opcional)
OPENAI_MAX_TOKENS=1500

# === CONFIGURACIÓN DE RECOMENDACIONES ===
# Habilitar/deshabilitar sistema de recomendaciones IA
RECOMENDACIONES_IA_ENABLED=true

# Máximo número de recomendaciones por usuario
RECOMENDACIONES_MAX_POR_USUARIO=10
